<!DOCTYPE heml>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" , content="device-width, initial-scale=1.0">
  <title>Add book</title>
  <link rel="stylesheet" href="styles/new-book-style.css">
</head>


<body>
  <!-- 
  view the books in little boxes and be able to update and delete them from the database 
   -->
  <div class="books-display">
    <% if(locals.result) { %>
      <% result.forEach(result=> { %>
        <div id="<%= result.id %>">
          <h4><input type="text" name="title" id="" value="Book title: <%= result.title %>"></h4>
           <p><input type="text" name="author"  value="Author: <%= result.author %>"></p>
           <p><input type="text" name="date"  value="Date read: <%= result.date_read %>"></p>
           <p><input type="text" name="rating"  value="Rating: <%= result.rating %>"></p>
           <p><input type="text" name="review"  value="Review: <%= result.review %>"></p>
          <div class="update-forms">
            <form action="/edit" method="post">
              <input type="submit" class="edit" value="Edit">
            </form>
            <form action="/delete" method="post">
              <input type="submit" class="delete" value="Delete">
            </form>
            <!-- <button type="button" ><a href="/edit">Edit</a></button>
            <button type="button" name="delete" class="delete"><a href="/delete">Delete</a></button> -->
          </div>
        </div>
        <% }) %>
          <% } else { %>
            <h1>No books to show.</h1>
            <% } %>
  </div>
  <hr>
  <div class="form-container">
    <h1>Add book</h1>
    <form action="/addbook" method="post" class="input-form">
      <div>
        <label for="title">Title: </label>
        <input type="text" name="title" required>
      </div>
      <div>
        <label for="author">Author: </label>
        <input type="text" name="author" id="" required>
      </div>
      <div>
        <label for="bookcover"> Book Cover: </label>
        <input type="file" name="bookCover" id="" required>
      </div>
      <div>
        <label for="dateRead"> Date Read: </label>
        <input type="date" name="dateRead" id="" required>
      </div>
      <div>
        <label for="rating"> Rating: </label>
        <input type="number" name="rating" id="" required>
      </div>
      <div class="review">
        <label for="review">Review: </label>
        <textarea type="text" name="review" rows="6" cols="50" placeholder="Say your mind..." required></textarea>
      </div>
      <button>Submit</button>
    </form>
  </div>
</body>

</html>